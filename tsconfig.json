{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"moduleResolution": "bundler",
		"baseUrl": "./src/",
		"outDir": "./dist",
		"lib": [
			"esnext",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
